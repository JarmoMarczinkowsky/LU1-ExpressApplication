<div class="container py-5">
  <h1 class="text-center mb-4">ðŸŽ¬ Movies</h1>

  <!-- search bar -->
  <div class="mb-4" style="display: flex; justify-content: center;">
    <input type="text" style="align-items: center; width: 70%;" class="form-control" id="searchInput"
      placeholder="Search movies..." onkeyup="filterMovies()" />
  </div>

  <button type="button" class="btn btn-primary" style="margin-bottom: 25px;"
    onclick="location.href='/movies/create'">Add new movie</button>

  <div class="row g-4">
    <% movies.forEach(function(movie) { %>
      <!-- Movie Card -->
      <div class="col-sm-6 col-md-4 col-lg-3">
        <div class="card shadow-sm h-100 border-0 rounded-4">
          <div class="position-relative">
            <img src="images/Cinema.jpg" class="card-img-top rounded-top-4" alt="Movie Poster" />
            <!-- Edit icon -->
            <a href="/movies/edit/<%= movie.film_id %>"
              class="edit-icon position-absolute top-50 start-50 translate-middle">
              <i class="bi bi-pencil-square"></i>
            </a>
          </div>
          <div class="card-body d-flex flex-column">
            <h5 class="card-title">
              <%= movie.title %>
            </h5>
            <p class="card-text text-muted small flex-grow-1">
              <%= movie.description %>
            </p>
            <a href="http://localhost:3000/movies/<%= movie.film_id %>" class="btn btn-primary mt-auto w-100">View
              Details</a>
          </div>
        </div>
      </div>
      <% }); %>
  </div>

  <!-- add page selector -->
  <div class="d-flex justify-content-center">
    <nav aria-label="Page navigation example">
      <ul class="pagination">
        <li class="page-item"><a class="page-link" href="#">Previous</a></li>
        <li class="page-item"><a class="page-link" href="#">1</a></li>
        <li class="page-item"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
        <li class="page-item"><a class="page-link" href="javascript:void(0);"
            onclick="goToPage(getCurrentPage() + 1)">Next</a></li>
      </ul>
    </nav>
  </div>

  <script>
    let currentPage = 1;
    let itemsPerPage = 20; // Adjust based on your pagination logic

    function goToPage(page) {
      currentPage = page;
      window.location.href = `/movies?page=${page}`;
    }

    function getCurrentPage() {
      const urlParams = new URLSearchParams(window.location.search);
      return parseInt(urlParams.get('page')) || 1;
    }

    function filterMovies() {
      const input = document.getElementById('searchInput');
      const filter = input.value.toLowerCase();
      const cards = document.querySelectorAll('.card');

      cards.forEach(card => {
        const title = card.querySelector('.card-title').textContent.toLowerCase();
        const description = card.querySelector('.card-text').textContent.toLowerCase();
        if (title.includes(filter) || description.includes(filter)) {
          card.style.display = '';
        } else {
          card.style.display = 'none';
        }
      });
    }

    // function goToMovieDetails(filmId) {
    //     window.location.href = `/movies?page=${filmId}`;
    // }
  </script>
</div>


