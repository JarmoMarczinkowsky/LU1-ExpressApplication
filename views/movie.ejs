<!-- Hero Section -->
  <section class="bg-dark text-white py-5">
    <div class="container d-flex flex-column flex-md-row align-items-center gap-4">
      <img src="<%= process.env.HOST_URL %>/images/Cinema.jpg" 
     alt="Movie Poster" 
     class="rounded-4 shadow-lg img-fluid" 
     style="max-width: 250px; height: auto;">
      <div>
        <h1 class="display-4 fw-bold" id="movieDetailTitle"><%= singleMovie.title %></h1>
        <!-- <p class="lead">“Your mind is the scene of the crime.”</p> -->
      </div>
    </div>
  </section>

  <!-- Details Section -->
  <section class="container py-5">
    <div class="row">
      
      <!-- Left column: Description -->
      <div class="col-md-8 mb-4">
        <h2 class="h4 mb-3">Description</h2>
        <p>
          <%= singleMovie.description %>
        </p>
      </div>

      <!-- Right column: Metadata -->
      <div class="col-md-4">
        <div class="card shadow-sm border-0 rounded-4">
          <div class="card-body">
            <h2 class="h5 mb-3">Movie Details</h2>
            <ul class="list-unstyled">
              <li><strong>Release Year:</strong> <%= singleMovie.release_year %></li>
              <li><strong>Rental Rate:</strong> <%= singleMovie.rental_rate %></li>
              <li><strong>Language:</strong> <%= singleMovie.language %></li>
              <li><strong>Category:</strong> <%= singleMovie.category %></li>
              <li><strong>Special Features:</strong> <%= singleMovie.special_features %></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>